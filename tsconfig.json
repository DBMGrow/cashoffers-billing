{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src/",
    "allowJs": true, // include .js in the program
    // "checkJs": true, // actually type-check .js
    "noEmit": true, // don't output build artifacts here

    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
